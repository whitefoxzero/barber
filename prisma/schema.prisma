generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  phone     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  shopId String? @db.ObjectId
  shop   Shop?   @relation(fields: [shopId], references: [id])
}

model Shop {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String   @unique
  password    String
  address     String
  phone       String   @unique
  description String
  image       String
  createdAt   DateTime @default(now())

  users User[]
}

enum Role {
  USER
  ADMIN
  BARBER
}

